{% extends 'base.html.twig' %}

{% block title %}Ecrire des réponses
{% endblock %}

{% block body %}
	<div class="container mx-auto p-4">
		<div class="grid grid-cols-12 gap-4">
			<div class="col-span-12 xl:col-span-3">
				<h2 class="text-center font-semibold text-gray-400 border-b-2 p-1">Questions</h2>
				<ul class="text-center">
					<li class="list-item pb-2 p-1 text-indigo-400 bg-indigo-100 font-bold">
						<a href="#">Questions pour vous</a>
					</li>
				</ul>
			</div>
			<div class="col-span-12 xl:col-span-6">
				<div class="bg-white border border-gray-300 mb-2">
					<h2 class="text-gray-400 p-2">Questions pour vous</h2>
				</div>
				<div>
					{% for question in questions %}
						<div class="answerHeader questions p-2 mb-4 bg-white border border-gray-300" data-question-id={{question.id}}>
							<a href="{{path('app_question_show',{'id':question.id})}}" class="font-black p-2">{{question.question}}</a>
							<p class="font-semibold text-gray-400">
								<a href="{{path('app_question_show',{'id':question.id})}}">{{question.answers|length}}
									réponses</a> - Question posée le {{question.createdAt|date('d/m/Y')}}</p>
							<div class="links flex ">
								<a class="multipleAnswerButton block p-2 rounded hover:bg-gray-200 mr-6" href="#">
									<i class="bi text-2xl bi-pencil-square"></i>
								</a>
							</div>
							<div>
								<div id="editor"></div>
								<div class="multiplePostAnswerButton hidden mt-3">
									<a href="#" class="text-center px-2 py-1 block bg-indigo-400 font-bold text-xl text-white rounded-full w-28">Poster</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				<div class="bg-white flex flex-col p-4 border border-gray-300">
					<h3 class="text-xl">
						Ajouter des sujets que vous connaissez</h3>
					<p class="my-2">L'ajout de sujets nous permettra de trouver des questions auxquelles vous pouvez répondre</p>
					<a href="{{path('app_space_index')}}" class="hover:bg-blue-200 self-center block text-indigo-600 bg-blue-100 p-2 rounded-xl w-40 text-center font-semibold">Ajouter des sujets</a>
				</div>
			</div>
			<div class="hidden col-span-3 lg:block xl:col-span-3">
				<div class="bg-white flex flex-col p-4 border border-gray-300">
					<h3 class="text-xl">
						Ajouter des sujets que vous connaissez</h3>
					<p class="my-2">L'ajout de sujets nous permettra de trouver des questions auxquelles vous pouvez répondre</p>
					<a href="{{path('app_space_index')}}" class="hover:bg-blue-200 self-center block text-indigo-600 bg-blue-100 p-2 rounded-xl w-40 text-center font-semibold">Ajouter des sujets</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
{% block javascripts %}
	<script src="https://cdn.ckeditor.com/ckeditor5/29.2.0/classic/ckeditor.js"></script>
{% endblock %}
