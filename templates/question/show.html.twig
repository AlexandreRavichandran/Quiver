{% extends 'base.html.twig' %}

{% block title %} {{question.question}} {% endblock %}

{% block body %}
    <div class="container mx-auto">
        <div class="grid grid-cols-12 gap-4 flex justify-between">
            <div class="col-span-12 lg:col-span-7">
                <div class="answerHeader border-b-2 pb-3">
                    <div class="tags">
                        <ul class="flex flex-row flex-wrap">
                        {% for space in question.space %}
                            <li class="bg-gray-200 p-2 m-1 rounded"><a href="{{path('app_space_show',{'id':space.id})}}">{{space.name}}</a></li>
                        {% endfor %}
                            <li class="bg-gray-200 p-2 m-1"><a href="#"><i class="bi text-xl bi-pencil"></i></a></li>
                        </ul>
                    </div>
                    <h1 class="text-2xl font-black">{{question.question}}</h1>
                    <div class="actions flex">
                        <a class="block mr-2" href="#"><i class="bi text-xl bi-pencil"></i> Répondre</a>
                        <a class="block mr-2" href="#"><i class="bi text-xl bi-arrow-up-square"></i> Vote positif</a>
                        <a class="block mr-2" href="#"><i class="bi text-xl bg-gray-200 bi-arrow-down-square"></i> Vote négatif</a>
                    </div>
                </div>
                <p class="p-2 text-2xl"> {{question.answers|length}} Reponses </p>
                {% for answer in question.answers %}
                <div class="answerBody border-t-2 pt-3">
                    <h2 class="font-black">{{answer.author.pseudonym}}</h2>
                    <p class="text-gray-400">Répondu le {{answer.createdAt|date('d/m/Y')}}</p>
                    <p class="mt-3">{{answer.answer}}</p>
                    <p>{{answer.viewsNumber}} vues</p>
                </div>
                <div class="postFooter">
                    <div class="grid grid-cols-7">
                        <div class="col-span-4 flex justify-start">
                            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi text-xl bi-arrow-up-square mr-1"></i><span>14</span></a>
                            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi text-xl bi-arrow-down-square mr-1"></i><span>14</span></a>
                            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi text-xl bi-chat mr-1"></i><span>{{answer.comments|length}}</span></a>
                        </div>
                        <div class="col-span-3 flex justify-end">
                            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi p-2 text-xl bi-three-dots"></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-span-12 lg:col-span-4 row-span-2"> 
                <h3 class="pb-3 border-b-2 text-center">Questions similaires</h3>
                <ul class="text-center">
                {% for question in alternativeQuestions %}
                    <li class="mb-3"><a href="{{path('app_question_show',{'id':question.id})}}" class="text-indigo-500">{{question.question}} </a></li>
                {% endfor %}
                </ul>
                <a class="block text-gray-400 text-center mt-5" href="#"> Poser une question</a>
            </div>
        </div>
    </div>
{% endblock %}
