{% extends 'base.html.twig' %}

{% block title %}Espaces{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-10 gap-4 flex justify-between">
            <div class="col-span-12 sm:col-span-12 lg:col-span-8 xl:col-span-6 p-4 bg-white border border-gray-300">
                <div class="spaceHeader flex justify-between">
                    <h1 class="font-black text-2xl">Vos espaces</h1>
                    <select name="" id="">
                        <option value="">Ordre alphabetique</option>
                        <option value="">Par rôle</option>
                        <option value="">Visité récemment</option>
                    </select>
                </div>
                <span class="flex justify-start mt-2">
                    <a href="#" class=" block p-2 rounded border mr-4"><i class="bi bi-plus-circle mr-1"></i>Créer un espace</a>
                    <a href="#" class="block p-2 rounded border"><i class="bi bi-compass mr-1"></i>Découvrir des espaces</a>
                </span>
                <div class="userSpaceList">
                    <div class="userSpace flex justify-between p-2 border-b-2">
                        <p class="font-black"><img class="inline mr-3" src="https://placehold.it/60x60" alt="">Espace 1 </p>
                        <i class="bi bi-chevron-right"></i>
                    </div>
                    <div class="userSpace flex justify-between p-2 border-b-2">
                        <p class="font-black"><img class="inline mr-3" src="https://placehold.it/60x60" alt="">Espace 2 </p>
                        <i class="bi bi-chevron-right"></i>
                    </div>
                    <div class="userSpace flex justify-between p-2 border-b-2">
                        <p class="font-black"><img class="inline mr-3" src="https://placehold.it/60x60" alt="">Espace 3 </p>
                        <i class="bi bi-chevron-right"></i>
                    </div>
                </div>
            </div> 
        </div>
        <div class="grid grid-cols-12 gap-4 flex justify-between">
            <div class="col-span-12 lg:col-span-10 xl:col-span-10 p-4 ">
                <h2 class="font-black text-2xl"> Découvrir des espaces </h2>
                <div class="grid grid-cols-12 gap-4 mt-4 spaceList flex flex-wrap">
                {% for space in spaces %}
                    <div class="col-span-12 md:col-span-6 lg:col-span-4 spaceCard bg-white rounded-xl p-2 border border-gray-300 hover:bg-gray-200">
                        <a href="{{path('app_space_show',{'id':space.id})}}">
                            <img class="block ml-auto mr-auto" src="https://placehold.it/150x150" alt="">
                            <h3 class="text-center font-black text-xl">{{space.name}}</h3>
                            <p class="text-center">{{space.description}}</p>
                        </a>
                    </div>
                {% endfor %}
                </div>
            </div>      
        </div>
    </div>
{% endblock %}
