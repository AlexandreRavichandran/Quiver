{% extends 'base.html.twig' %}

{% block title %}Alexandre RAVICHANDRAN - Quiver{% endblock %}

{% block body %}
    <div class="container mx-auto p-4 bg-white rounded">
        <div class="grid grid-cols-12">
            <div class="col-span-12 lg:col-span-8 p-4">
                <div class="header flex justify-center">
                    <img class="block rounded-full" src="https://placehold.it/130" alt="">
                    <div class="ml-4 self-center">
                        <h1 class="text-3xl font-black">Alexandre RAVICHANDRAN</h1>
                        <a href="#" class="block font-semibold text-gray-400 mt-2 mb-2">Ajouter une qualification de profil</a>
                        <p><a href="#"> 1 abonné </a> <a href="#"> 2 qui suit</a></p>
                        <a href="#" class="mt-3 block text-gray-400">Ecrivez votre description</a>
                    </div>
                </div>
                <div>
                    <nav class="border-b-2 mt-4">
                        <ul class="flex">
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'profile' %} profileActive {% endif %}"><a href="{{path('app_user_profile')}}">Profil</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'answer' %} profileActive {% endif %}"><a href="{{path('app_user_profile_answer')}}">2 réponses</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'question' %} profileActive {% endif %}"><a href="{{path('app_user_profile_question')}}">4 questions</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'subscriber' %} profileActive {% endif %}"><a href="{{path('app_user_profile_subscriber')}}">3 abonnés</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'subscription' %} profileActive {% endif %}"><a href="{{path('app_user_profile_subscription')}}">13 abonnements</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="content">
                    {% include 'user/partials/_' ~ partial ~ '.html.twig' %}
                </div>
            </div>
            <div class="col-span-12 lg:col-span-4 bg-white p-4">
                <div class="flex justify-between p-4 border-b-2">
                    <h2 class="color-gray-400 font-semibold">Qualifications et faits marquants </h2>
                    <p class="rounded-full p-2 border flex items-center justify-center"><a href=""><i class="bi bi-pencil-fill"></i></a></p>
                </div>
                <div>
                    <p class="p-2"><i class="bi bi-briefcase mr-3"></i><a href="#">Ajouter une qualification professionnelle</a></p>
                    <p class="p-2"><a href="#">Ajouter des qualifications académiques</a></p>
                    <p class="p-2"><i class="bi bi-geo-alt mr-3"></i><a href="#">Ajouter une situation géographique</a></p>
                    <p class="p-2"><i class="bi bi-globe mr-3"></i><a href="#">Connaissances: Anglais</a></p>
                    <p class="p-2"><i class="bi bi-calendar mr-3"></i><a href="#">A rejoint en janvier 2021</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
