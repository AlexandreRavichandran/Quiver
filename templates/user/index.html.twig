{% extends 'base.html.twig' %}

{% block title %}{{user.firstName}} {{user.lastName|upper}} - Quiver{% endblock %}

{% block body %}
    <div class="container mx-auto p-4 bg-white rounded">
        <div class="grid grid-cols-12">
            <div class="col-span-12 lg:col-span-8 p-4">
                <div class="header flex justify-center">
                    <div class="flex row items-center">
                        <img class="block rounded-full" src="/images/profile_pictures/image-{{user.id}}.jpg" alt="" width="160px">
                    </div>
                    <div class="row">
                        <div class="ml-4 self-center">
                            <h1 class="text-3xl font-black">{{user.firstName}} {{user.lastName|upper}}</h1>
                            {% if user.pseudonym is not same as app.user.pseudonym and user.isSubscribedTo(app.user) %}
                            <p class="my-3 bg-gray-200 text-gray-500 rounded w-24 px-2">VOUS SUIT</p>
                            {% endif %}
                            {% if user == app.user %}
                            <a href="#" id="userQualification" class="block font-semibold text-gray-400 mt-2 mb-2">{{user.qualification}}</a>
                            <input type="text" class="hidden userQualificationSetting">
                            <a href="#" id="userDescription" class="mt-3 block text-gray-400">{{user.description}}</a>
                            <textarea style="max-height:200px" class="hidden userDescriptionSetting w-full sm:w-50" cols="80" rows="2"></textarea>
                            <a href="#" id="updateDescription" class="hidden flex justify-center p-2 bg-indigo-400 rounded text-white mt-2 w-20">Modifier</a>
                            <p
                            {% else %}
                            <p class="block font-semibold text-gray-400 mt-2 mb-2">{{user.qualification}}</p>
                            <p class=" mt-3 block text-gray-400">{{user.description}}</p> 
                            {% endif %}
                            <p><a href="{{path('app_user_profile_subscriber',{'pseudonym':user.pseudonym})}}"> {{user.subscribers|length}} abonnés </a> <a href="{{path('app_user_profile_subscription',{'pseudonym':user.pseudonym})}}"> {{user.subscriptions|length + user.subscribedSpaces|length}} qui suit</a></p>
                            
                        </div>
                    </div>
                </div>
                <div>
                    <nav class="border-b-2 mt-4">
                        <ul class="flex">
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'profile' %} profileActive {% endif %}"><a href="{{path('app_user_profile',{'pseudonym':user.pseudonym})}}">Profil</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'answer' %} profileActive {% endif %}"><a href="{{path('app_user_profile_answer',{'pseudonym':user.pseudonym})}}">{{user.answers|length}} réponses</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'question' %} profileActive {% endif %}"><a href="{{path('app_user_profile_question',{'pseudonym':user.pseudonym})}}">{{user.questions|length}} questions</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'subscriber' %} profileActive {% endif %}"><a href="{{path('app_user_profile_subscriber',{'pseudonym':user.pseudonym})}}"><span id="subscriberNumber">{{user.subscribers|length}}</span> abonnés</a></li>
                            <li class="list-item mr-4 mb-0 py-4 {% if partial is same as 'subscription' %} profileActive {% endif %}"><a href="{{path('app_user_profile_subscription',{'pseudonym':user.pseudonym})}}">{{user.subscriptions|length + user.subscribedSpaces|length}} abonnements</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="content">
                    {% include 'user/partials/_' ~ partial ~ '.html.twig' %}
                </div>
            </div>
            <div class="col-span-12 lg:col-span-4 bg-white p-4">
                <div class="flex justify-between p-4 border-b-2">
                    <h2 class="color-gray-400 font-semibold">Qualifications et faits marquants </h2>
                    <p class="rounded-full p-2 border flex items-center justify-center"><a href=""><i class="bi bi-pencil-fill"></i></a></p>
                </div>
                <div>
                    <p class="p-2"><i class="bi bi-briefcase mr-3"></i><a href="#">Ajouter une qualification professionnelle</a></p>
                    <p class="p-2"><a href="#">Ajouter des qualifications académiques</a></p>
                    <p class="p-2"><i class="bi bi-geo-alt mr-3"></i><a href="#">Ajouter une situation géographique</a></p>
                    <p class="p-2"><i class="bi bi-globe mr-3"></i><a href="#">Connaissances: Anglais</a></p>
                    <p class="p-2"><i class="bi bi-calendar mr-3"></i><a href="#">A rejoint en {{user.createdAt|date('F Y')}}</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
