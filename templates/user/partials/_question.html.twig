<div class="header border-b-2 py-2">
    <h3 class="font-semibold text-xl"> {{user.questions|length}} questions </h3>
</div>
<div class="questions mt-3">
{% for question in user.questions %}
    <div class="questions p-2">
        <h3 class="font-black">{{question.question}}</h3>
        <p class="font-semibold text-gray-400"><span>{{question.answers|length}}</span> réponses - Question posée le {{question.createdAt|date('d/m/Y')}}</p>
        <div class="links flex ">
            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi text-2xl bi-pencil-square"></i></a>
            <a class="block p-2 rounded hover:bg-gray-200 mr-6" href="#"><i class="bi text-2xl bi-arrow-down-square mr-1"></i><span>14</span></a>
            <a href="#" class="block"></a>
        </div>
    </div>
    {% endfor %}
</div>