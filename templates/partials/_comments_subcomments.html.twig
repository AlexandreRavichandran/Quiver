{% for comment in comments %}
    <div class="commentheader flex mt-3 border-t-4 pt-3" data-comment-date="{{comment.createdAt|date('Y-m-d')}}">
        <img class="block rounded-full" src="https://placehold.it/45x45" alt="">
        <div class="ml-2">
            <p class="font-semibold text-xl">{{comment.author.pseudonym}}</p>
            <p class="text-gray-300">{{comment.createdAt|date('d/m/Y')}}</p>
        </div>
    </div>
    <p class="p-2 pt-0">{{comment.comment}}</p>
    <div class="commentFooter px-3 mb-4">
        <a class="block bg-gray-200 p-3 rounded-full w-32 font-semibold" href="#">RÃ©pondre<i class="ml-2 bi bi-arrow-return-left"></i></a>
    </div>
    <div class=" ml-3 pl-3 border-l-4 sub_comments">
        {% for subComments in comment.subComments %}
        <div class="subCommentheader flex ">
            <img class="block rounded-full" src="https://placehold.it/45x45" alt="">
            <div class="ml-2">
                <p class="font-semibold">{{subComments.author.pseudonym}}</p>
                <p class="text-gray-300">{{subComments.createdAt|date('d/m/Y')}}</p>
            </div>
        </div>
        <div class="p-4 pt-1 mb-3">
            {{subComments.subComment}}
        </div>
        {% endfor %}
    </div>
{% endfor %}
