<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Quiver{% endblock %}</title>
        <link rel="icon" sizes="16x16" href="../images/quiver_logo.png">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('post') }}
             {{ encore_entry_script_tags('modal') }}
        {% endblock %}
    </head>

    <body class="bg-gray-100">
        <div class="sticky top-0">
            {% include 'partials/_header.html.twig' %}
            {% for label,messages in app.flashes %}
                {% for message in messages %}
                <div class="block p-2 bg-{{label}}-400 text-center flashMessage">
                    <button class="flashMessageCloseButton" type="button" class="close" data-dismiss="alert">&times;</button>
                    {{message}}
                </div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}  
    </body>
</html>
